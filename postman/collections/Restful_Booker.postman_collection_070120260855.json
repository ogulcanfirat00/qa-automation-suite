							"    pm.expect(responseDataCheck.firstname).to.be.a(\"string\");\r",
							"    pm.expect(responseDataCheck.lastname).to.be.a(\"string\");\r",
							"    pm.expect(responseDataCheck.totalprice).to.be.a(\"number\");\r",
							"    pm.expect(responseDataCheck.depositpaid).to.be.a(\"boolean\");\r",
							"    pm.expect(responseDataCheck.bookingdates).to.be.an(\"object\");\r",
							"    pm.expect(responseDataCheck.bookingdates.checkin).to.be.a(\"string\");\r",
							"    pm.expect(responseDataCheck.bookingdates.checkout).to.be.a(\"string\");\r",
							"    pm.expect(responseDataCheck.additionalneeds).to.be.a(\"string\");\r",
							"});"
